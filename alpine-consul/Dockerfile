FROM smebberson/alpine-base
MAINTAINER Scott Mebberson <scott@scottmebberson.com>

ENV CONSUL_VERSION=0.6.3

# Download and install Consul
RUN apk add --update openssl && \
    wget -q -O /tmp/consul.zip https://releases.hashicorp.com/consul/${CONSUL_VERSION}/consul_${CONSUL_VERSION}_linux_amd64.zip && \
    unzip -d /usr/sbin/ /tmp/consul.zip && \
    rm /tmp/consul.zip && \
    apk del openssl && \
    rm -rf /var/cache/apk/*

RUN addgroup consul && \
    adduser -D -s /bin/sh -G consul consul && \
    mkdir -p /data/consul && \
    chown -R consul:consul /data/consul

# Add the files
ADD root /

VOLUME ["/data/consul"]

EXPOSE 8300 8301 8301/udp 8302 8302/udp 8400 53 53/udp
